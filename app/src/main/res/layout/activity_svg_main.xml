<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_trick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trick" />

    <Button
        android:id="@+id/btn_sun_earth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SunEarth" />

    <Button
        android:id="@+id/btn_trace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="轨迹动画" />

    <ImageView
        android:id="@+id/image_trick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/anim_vector_trick" />

    <ImageView
        android:id="@+id/image_trace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/anim_vector_trace"
        android:layout_marginTop="20dp"
        />

</LinearLayout>